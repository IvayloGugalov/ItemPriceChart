<UserControl x:Class="ItemPriceCharts.UI.WPF.Views.UserControls.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   Text="Create account"
                   Foreground="Black"
                   FontFamily="LilyUPC"
                   FontWeight="SemiBold"
                   FontSize="15"/>

        <xctk:WatermarkTextBox Grid.Row="2"
                               Name="userFirstNameTextBox"
                               Margin="15 0"
                               HorizontalAlignment="Stretch"
                               Watermark="First name"
                               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                               KeyboardNavigation.TabIndex="0"/>
        <xctk:WatermarkTextBox Grid.Row="4"
                               Name="userLastNameTextBox"
                               Margin="15 0"
                               HorizontalAlignment="Stretch"
                               Watermark="Last name"
                               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                               KeyboardNavigation.TabIndex="1"/>
        <xctk:WatermarkTextBox Grid.Row="6"
                               Name="usernameTextBox"
                               Margin="15 0"
                               HorizontalAlignment="Stretch"
                               Watermark="Username"
                               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                               KeyboardNavigation.TabIndex="2"/>

        <xctk:WatermarkPasswordBox Grid.Row="8"
                                   x:Name="passwordTextBox"
                                   Margin="15 0"
                                   HorizontalAlignment="Stretch"
                                   Watermark="Password"
                                   Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                   KeyboardNavigation.TabIndex="3"/>

        <xctk:WatermarkPasswordBox Grid.Row="10"
                                   x:Name="repeatPasswordTextBox"
                                   Margin="15 0"
                                   HorizontalAlignment="Stretch"
                                   Watermark="Repeat password"
                                   Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                   KeyboardNavigation.TabIndex="4"/>

        <xctk:WatermarkTextBox Grid.Row="12"
                               Name="emailTextBox"
                               Margin="15 0"
                               HorizontalAlignment="Stretch"
                               Watermark="Email"
                               Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                               KeyboardNavigation.TabIndex="5"/>

        <Button Grid.Row="14"
                Name="registerButton"
                Style="{StaticResource MahApps.Styles.Button.Dialogs.AccentHighlight}"
                Command="{Binding RegisterCommand}"
                Content="Register"
                Width="200"
                Height="25"
                KeyboardNavigation.TabIndex="6"/>
    </Grid>
</UserControl>
