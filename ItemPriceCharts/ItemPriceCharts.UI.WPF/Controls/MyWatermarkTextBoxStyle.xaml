<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ItemPriceCharts.UI.WPF.Controls"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Style TargetType="local:MyWatermarkTextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyWatermarkTextBox">
                    <Border BorderThickness="1"
                            CornerRadius="8"
                            BorderBrush="RoyalBlue"
                            Margin="15 0">
                        <xctk:WatermarkTextBox x:Name="watermarkTextBox"
                                               BorderThickness="0"
                                               Margin="5 1"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>